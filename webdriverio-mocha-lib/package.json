{
  "name": "wdio-lib",
  "version": "3.0.0",
  "description": "Example implementation of a test suite using WebdriverIO and Mocha to exercise a Web interface",
  "author": {
    "name": "Jan Molak",
    "email": "jan.molak@smartcodeltd.co.uk",
    "url": "https://janmolak.com"
  },
  "homepage": "https://serenity-js.org",
  "license": "Apache-2.0",
  "main": "./index.js",
  "scripts": {
    "clean": "rimraf target",
    "lint": "eslint --ext ts --config ../../.eslintrc.yml",
    "test:update-serenity": "serenity-bdd update --ignoreSSL",
    "test:acceptance": "wdio wdio.conf.ts",
    "test:report": "serenity-bdd run",
    "test": "failsafe clean test:update-serenity test:acceptance test:report",
    "verify": "npm test",
    "dist": "rimraf dist && tsc && cp package.json dist"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/serenity-js/serenity-js.git"
  },
  "bugs": {
    "url": "https://github.com/serenity-js/serenity-js/issues"
  },
  "engines": {
    "node": "^14 || ^16",
    "npm": "^6 || ^7 || ^8"
  },
  "devDependencies": {
    "@serenity-js/assertions": "^3.0.0-rc",
    "@serenity-js/console-reporter": "^3.0.0-rc",
    "@serenity-js/core": "^3.0.0-rc",
    "@serenity-js/mocha": "^3.0.0-rc",
    "@serenity-js/serenity-bdd": "^3.0.0-rc",
    "@serenity-js/web": "^3.0.0-rc",
    "@serenity-js/webdriverio": "^3.0.0-rc",
    "@types/mocha": "^9.0.0",
    "@wdio/cli": "^7.16.10",
    "@wdio/local-runner": "^7.16.10",
    "@wdio/mocha-framework": "^7.16.6",
    "@wdio/reporter": "^7.16.3",
    "@wdio/spec-reporter": "^7.16.9",
    "mocha": "^9.1.1",
    "npm-failsafe": "^0.4.3",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2",
    "webdriverio": "^7.16.10"
  }
}
